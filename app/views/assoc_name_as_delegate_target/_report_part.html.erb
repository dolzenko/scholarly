<div class="report_part">
  <h2>
    <%= title %>: <%= entries.size %> cases
    (<%= 100 * entries.size / total %> %)
  </h2>

  <%= highlight(sample) %>

  <div style="display: none;">
    <i>file</i> : <i>delegation target</i>
    <% for info in entries %>
      <div>
        <%# f = File.join("/reflexive/files", info[:file]) %>
        <%#= link_to f, f %>
        <%= link_to local_path_to_uri(info[:file]), local_path_to_uri(info[:file]) %>
        :
        <code>
          <%= info[:delegation_target] %>
        </code>
      </div>
    <% end %>
  </div>
</div>